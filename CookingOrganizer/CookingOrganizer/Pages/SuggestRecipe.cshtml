@page
@model CookingOrganizer.Pages.SuggestRecipeModel
@{
}
<!DOCTYPE html>
<html>
<head>
    <!-- Standard Meta -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

    <!-- Site Properties -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.css">
    <link rel="stylesheet" href="/stylesheets/landing.css">
    <link href="~/css/styleSecondTry.css" rel="stylesheet" asp-append-version="true" />
</head>

<body class="suggestRecipePage">
    <div class="navbar">
        <a asp-page="/Home">Home</a>
        <a asp-page="/Recipes">Our recipes</a>
        <a asp-page="/SuggestRecipe">Suggest a recipe</a>
        <a asp-page="/Logout">Logout</a>

    </div>

    <div class="row">
        <h2 class="ui center aligned icon header">
            <i class="address card icon"></i>
            Suggestion Box
        </h2>
    </div>
    <div class="ui green unstackable items left aligned text container segment padded raised">
        <div class="item">
            <div class="content">
                <div class="meta">
                    <span class="deleteMe"></span>
                    <p>
                        @Model.Message<i class="smile icon" style="color:#00a0dc"></i>
                    </p>
                    <p></p>
                    <p></p>
                </div>
            </div>
        </div>
    </div>


    <form class="ui form left aligned text container" method="post">
        <h4 class="ui dividing header">Name of Recipe</h4>
        <div class="one field">
            <div class="field">
                <input asp-for="RecipeSuggestion.Name" required rows="1">
                <span asp-validation-for="RecipeSuggestion.Owner"></span>

            </div>
        </div>
        <div class="field">
            <label>Ingredients</label>
            <div class="field">
                <input asp-for="RecipeSuggestion.Ingredients" required rows="2">
                <span asp-validation-for="RecipeSuggestion.Owner"></span>

            </div>
        </div>
        <div class="field">
            <label>Description</label>
            <div class="field">
                <input asp-for="RecipeSuggestion.Description" required rows="3">
                <span asp-validation-for="RecipeSuggestion.Owner"></span>

            </div>
        </div>
        <div class="field">
            <label>Specify owner </label>
            <div class="field">
                <div class="form-group">
                    <input asp-for="RecipeSuggestion.Owner"  rows="1" />
                    <span asp-validation-for="RecipeSuggestion.Owner"></span>
                </div>
            </div>
        </div>
        <div class="field">

            <input class="ui label" type="submit" style="margin-bottom: 10%">
        </div>
    </form>

</body>

</html>